#include <stdio.h>
#include <stdlib.h>

int main() {
    int size;
    printf("Input: ");
    scanf("%d",&size);
    
    int arr[size];
    
    for(int i = 0; i < size; i++){
        printf("input arr[%d]: ",i);
        scanf("%d",&arr[i]);
    }
    
    float avg, sum;
    
    for(int i = 0; i < size; i++){
        sum += arr[i];
    }
    avg = sum / size;
    
    printf("Avg is: %f",avg);
    return 0;
}
